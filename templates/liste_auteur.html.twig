{% extends 'base.html.twig'%}
{% block body %}
<h3> Liste de tous les auteurs inscrit sur la platforme  </h3>
<style>
    .bt_add{
        margin-left: auto;
        margin-right: auto;
        width: 10em;
    }

</style>

<div class="bt_add">
    <a href="{{ path('new') }}" class="btn btn-primary">Ajouter un Auteur</a>
</div>
{% for auteur in auteurs %}
    <section>
        <h2>{{ auteur.getNomPrenom() }}</h2>
        <p>{{ auteur.getNomPrenom() }} est
        {% if auteur.getSexe() == "M" %} 
            un écrivain
        {% else %}
            une écrivaine
        {% endif %}
        née le {{auteur.getDateDeNaissance() | date('d/m/Y')}} en {{auteur.getNationalite()}}
        </br>parmis ses oeuvres:
        <ul>
            <li>oeuvre 1</li>
            <li>oeuvre 2</li>
            <li>oeuvre 3</li>
            <li>oeuvre 4</li>
        </ul>
        <a href="{{ path('edit', {'id': auteur.getId()}) }}" class="btn btn-primary">Modifier les informations</a> <a href="{{ path('delet', {'id': auteur.getId()}) }}" class="btn btn-primary">Supprimer les informations</a>
        
        </p> 
    </section>
{% endfor %}    
{% endblock %}