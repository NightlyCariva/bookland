{% extends 'base.html.twig' %}

{% block title %}Nos Gnere!{% endblock %}

{% block body %}
<style>
    .position_card{
        
    margin-left: auto;
    margin-right: auto;
    width: 30%;
    margin-top: 5%;
    }
    
</style>
    <div class="position_card">
    <a class="btn btn-danger" href="{{ path('add_gender') }}">ajouter un nouveau genre</a>
    </div>
    <div class="container">
    <h1>Nos Genre : </h1>
  </div>
 <div class="form-group">
    <table class="table container mt-4">
        <thead>
            <tr>
                <th>Le nom du genre :</th>
        
          
            <th>Action :</th>
            </tr>
        </thead>
        <tbody>
        
        {% for genre in genres %}
            <tr>
                <td>{{ genre.nom }}</td>
        
              {% if genre.livres.count == 0 %}
               <td><a class="btn btn-danger" href="{{ path('genre_supprimer', {'id': genre.id}) }}">supprimer</a></td>
     {% endif %}
     {% else %}
         <td>aucun genre trouv√©</td>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}